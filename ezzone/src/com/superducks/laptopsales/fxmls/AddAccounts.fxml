            </image>
        </ImageView>
      <ImageView fx:id="imgAvatar" fitHeight="350.0" fitWidth="350.0" layoutX="31.0" layoutY="31.0" pickOnBounds="true">
         <image>
            <Image url="@../images/backgounds/white.jpg" />
