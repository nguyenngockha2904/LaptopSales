<AnchorPane fx:id="addAccountsPane" prefHeight="461.0" prefWidth="953.0" styleClass="body" stylesheets="@../css/manage-accounts.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.superducks.laptopsales.controllers.AddAccounts">
    <children>
        <Label layoutX="484.0" layoutY="34.0" text="Username" />
        <TextField fx:id="txtUsername" layoutX="606.0" layoutY="30.0" onKeyReleased="#textChanged" prefHeight="25.0" prefWidth="247.0" />
        <Label layoutX="484.0" layoutY="82.0" text="Email" />
        <TextField fx:id="txtEmail" layoutX="607.0" layoutY="78.0" prefHeight="25.0" prefWidth="247.0" />
        <Label layoutX="484.0" layoutY="128.0" text="Fullname" />
        <TextField fx:id="txtFullname" layoutX="606.0" layoutY="124.0" prefHeight="25.0" prefWidth="247.0" />
        <Label layoutX="484.0" layoutY="174.0" text="Password" />
        <PasswordField fx:id="txtPassword" layoutX="607.0" layoutY="170.0" onKeyReleased="#textChanged" prefHeight="25.0" prefWidth="247.0" />
        <Label layoutX="484.0" layoutY="219.0" text="Re-type Password" />
        <PasswordField fx:id="txtRetypePassword" layoutX="606.0" layoutY="215.0" onKeyReleased="#textChanged" prefHeight="25.0" prefWidth="247.0" />
        <Label layoutX="484.0" layoutY="266.0" text="Birthday" />
