        <Label layoutX="484.0" layoutY="359.0" text="Address" />
        <TextField fx:id="txtAddress" layoutX="607.0" layoutY="355.0" prefHeight="25.0" prefWidth="247.0" />
        <Label layoutX="484.0" layoutY="408.0" text="Phone" />
        <TextField fx:id="txtPhone" layoutX="607.0" layoutY="404.0" prefHeight="25.0" prefWidth="247.0" />

        <ImageView fx:id="btnNonAdd" fitHeight="40.0" fitWidth="40.0" layoutX="884.0" layoutY="34.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../icons/web_ui_brown/plus.png" />
            </image>
        </ImageView>
        <ImageView fx:id="btnAdd" fitHeight="40.0" fitWidth="40.0" layoutX="884.0" layoutY="34.0" onMouseClicked="#btnAdd_Click" pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="@../icons/web_ui_color/plus.png" />
            </image>
        </ImageView>
        <ImageView fx:id="btnClose" fitHeight="40.0" fitWidth="40.0" layoutX="884.0" layoutY="82.0" onMouseClicked="#btnClose_Click" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../icons/web_ui_color/delete.png" />
            </image>
        </ImageView>
      <ImageView fx:id="imgAvatar" fitHeight="350.0" fitWidth="350.0" layoutX="68.0" layoutY="30.0" pickOnBounds="true">
         <image>
            <Image url="@../images/noImg.jpg" />
         </image>
      </ImageView>
      <Button fx:id="btnImage" layoutX="168.0" layoutY="404.0" mnemonicParsing="false" onMouseClicked="#btnImage_Click" prefHeight="25.0" prefWidth="150.0" text="Choose Image" />


    </children>
