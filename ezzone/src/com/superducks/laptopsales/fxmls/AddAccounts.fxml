        <Label layoutX="447.0" layoutY="83.0" text="Email" />
        <TextField fx:id="txtEmail" layoutX="570.0" layoutY="79.0" prefHeight="25.0" prefWidth="247.0" style="-fx-alignment: CENTER;" />
