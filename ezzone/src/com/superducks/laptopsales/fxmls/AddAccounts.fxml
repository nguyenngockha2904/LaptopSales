        <Label layoutX="447.0" layoutY="175.0" text="Password" />
        <PasswordField fx:id="txtPassword" layoutX="570.0" layoutY="171.0" onKeyReleased="#textChanged" prefHeight="25.0" prefWidth="247.0" style="-fx-alignment: CENTER;" />
